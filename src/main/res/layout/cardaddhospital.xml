<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    app:cardElevation="5dp">
    

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5dp"
        app:cardCornerRadius="25dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Hospital"
                android:layout_margin="15dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="23sp"
                android:textStyle="bold"/>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="25sp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25sp"
                app:boxCornerRadiusTopStart="25sp"
                app:boxStrokeColor="@color/edit"
                app:boxStrokeErrorColor="@color/edit"
                app:counterOverflowTextColor="@color/edit"
                app:hintTextColor="@color/black"
                app:startIconTint="@color/black"

                >

                <EditText
                    android:id="@+id/etname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter Hospital Name"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="25sp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25sp"
                app:boxCornerRadiusTopStart="25sp"
                app:boxStrokeColor="@color/edit"
                app:boxStrokeErrorColor="@color/edit"
                app:counterOverflowTextColor="@color/edit"
                app:hintTextColor="@color/black"
                app:startIconTint="@color/black"

                >

                <EditText
                    android:id="@+id/etnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:maxLength="10"
                    android:inputType="number"
                    android:hint="Enter Hospital Number"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="25sp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25sp"
                app:boxCornerRadiusTopStart="25sp"
                app:boxStrokeColor="@color/edit"
                app:boxStrokeErrorColor="@color/edit"
                app:counterOverflowTextColor="@color/edit"
                app:hintTextColor="@color/black"
                app:startIconTint="@color/black"

                >

                <EditText
                    android:id="@+id/etemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter Hospital Email"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="25sp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25sp"
                app:boxCornerRadiusTopStart="25sp"
                app:boxStrokeColor="@color/edit"
                app:boxStrokeErrorColor="@color/edit"
                app:counterOverflowTextColor="@color/edit"
                app:hintTextColor="@color/black"
                app:startIconTint="@color/black"

                >

                <EditText
                    android:id="@+id/etaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"

                    android:hint="Enter Hospital Address"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="25sp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25sp"
                app:boxCornerRadiusTopStart="25sp"
                app:boxStrokeColor="@color/edit"
                app:boxStrokeErrorColor="@color/edit"
                app:counterOverflowTextColor="@color/edit"
                app:hintTextColor="@color/black"
                app:startIconTint="@color/black"

                >

                <EditText
                    android:id="@+id/etcity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter Hospital City"
                    android:inputType="text"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="25sp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25sp"
                app:boxCornerRadiusTopStart="25sp"
                app:boxStrokeColor="@color/edit"
                app:boxStrokeErrorColor="@color/edit"
                app:counterOverflowTextColor="@color/edit"
                app:hintTextColor="@color/black"
                app:startIconTint="@color/black"

                >

                <EditText
                    android:id="@+id/ettiming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter Hospital timings"
                    android:inputType="text"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="25sp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25sp"
                app:boxCornerRadiusTopStart="25sp"
                app:boxStrokeColor="@color/edit"
                app:boxStrokeErrorColor="@color/edit"
                app:counterOverflowTextColor="@color/edit"
                app:hintTextColor="@color/black"
                app:startIconTint="@color/black"

                >

                <EditText
                    android:id="@+id/etdescri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter Hospital Description"
                    android:inputType="text"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="15dp"
                android:textColorHint="@color/black"
                app:boxCornerRadiusBottomEnd="25sp"
                app:boxCornerRadiusBottomStart="25dp"
                app:boxCornerRadiusTopEnd="25sp"
                app:boxCornerRadiusTopStart="25sp"
                app:boxStrokeColor="@color/edit"
                app:boxStrokeErrorColor="@color/edit"
                app:counterOverflowTextColor="@color/edit"
                app:hintTextColor="@color/black"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/black"

                >

                <EditText
                    android:id="@+id/etpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Enter Hospital Password"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnaddhospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#EB7E5C"
                android:padding="10dp"
                android:text="Add"
                android:textSize="18sp" />




        </LinearLayout>

    </androidx.cardview.widget.CardView>
    



</ScrollView>